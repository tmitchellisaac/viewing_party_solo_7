<h3> Create A Viewing Party </h3>
<br>
<section>
  <h1> 
    <%= @facade.movie.title %> 
  </h1>
  <%= form_with url: "/users/#{@facade.user_id}/movies/#{@facade.movie_id}/viewing_party", local: true do |f| %>
  <%= f.label "Duration:" %>
  <%= f.number_field :duration, in: @facade.movie.runtime_min..1000, step: 1 %> minutes
  <p>
    <%= f.label "Date:" %>
    <%= f.date_field :date %>
  </p>
  <p>
    <%= f.label "Start Time:" %>
    <%= f.time_field :start_time %>
  </p>
  <p> Users to Invite: </p>
  <p> 
    <% @facade.users.each do |user| %>
      <%= f.label user.email %>
      <%= f.check_box user.id %>
      <br>
    <% end %> 
  </p>
    <%= f.submit "Create Party" %>
  <% end %>